<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightSkyBlue">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <frc3824.rscout2018.views.powered_up.IndividualStart
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/start"/>

        <frc3824.rscout2018.views.powered_up.IndividualCubes
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cubes"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <frc3824.rscout2018.views.powered_up.IndividualClimb
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/climb"/>

        <frc3824.rscout2018.views.powered_up.IndividualFouls
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fouls"/>
    </LinearLayout>
</ScrollView>