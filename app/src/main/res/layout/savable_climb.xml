<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <frc3824.rscout2018.views.powered_up.Timer
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Status:"
        android:textAlignment="center"
        android:textColor="@color/Black"
        android:textSize="30sp"
        android:id="@+id/status_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timer"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:id="@+id/status"
        app:layout_constraintTop_toBottomOf="@id/timer"
        app:layout_constraintLeft_toRightOf="@id/status_label"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Method:"
        android:textAlignment="center"
        android:textColor="@color/Black"
        android:textSize="30sp"
        android:id="@+id/method_label"
        app:layout_constraintLeft_toRightOf="@id/status"
        app:layout_constraintTop_toBottomOf="@id/timer"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:id="@+id/method"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/method_label"
        app:layout_constraintTop_toBottomOf="@id/timer"/>

</android.support.constraint.ConstraintLayout>