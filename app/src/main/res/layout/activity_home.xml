            android:textColor="@color/White"
            android:textSize="20sp"
            app:fButtonColor="@color/Navy"
            app:cornerRadius="5dp"
            app:shadowColor="@color/Black"
            app:shadowEnabled="true"
            app:shadowHeight="5dp"/>

        <info.hoang8f.widget.FButton
