        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"/>

    <LinearLayout
        android:id="@+id/scouting_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scouting_label">

        <info.hoang8f.widget.FButton
            android:id="@+id/match_scouting_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_weight="1"
            android:text="Match"
            android:textColor="@color/White"
            android:textSize="20sp"
            app:fButtonColor="@color/Navy"
            app:cornerRadius="5dp"
            app:shadowColor="@color/Black"
            app:shadowEnabled="true"
            app:shadowHeight="5dp"/>

        <info.hoang8f.widget.FButton
            android:id="@+id/pit_scouting_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
